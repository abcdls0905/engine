<!-- 夺宝系统配置 -->
<!-- Consume-夺宝需要消耗的耐力值 -->
<!-- ExpUp-夺宝获得经验-角色自身等级的倍数 -->
<!-- PlayerProbability-抢夺玩家获得碎片的概率 -->
<!-- PeaceItem1-3-获得和平模式消耗道具(3种） -->
<!-- PeacePrice1-3-获得和平模式消耗钻石 -->
<!-- PeaceTime1-3-和平模式持续时间 -->
<!-- ForbidBeginTime-禁止抢夺起始时间（0-24） -->
<!-- ForbidEndTime-禁止抢夺结束时间（0-24） -->
<!-- GiveLevel-当角色达到该等级给角色发一个碎片 -->
<!-- GiveChip-给角色发的碎片名称 -->
<!-- QuickComposeVipLevel-一键合成需要达到的vip等级 -->
<!-- QuickComposeMaxCount-一键合成最多可合成的个数 -->
<Object>
	<Property Consume="5" ExpUp="2" PlayerProbability="80" 
			  PeaceItem1="Item_mzl1" PeaceItem2="Item_mzl2" PeaceItem3="Item_mzl3" 
			  PeacePrice1="10" PeacePrice2="25" PeacePrice3="90" 
			  PeaceTime1="1" PeaceTime2="3" PeaceTime3="12" 
			  ForbidBeginTime="0" ForbidEndTime="10" 
			  GiveLevel="2" GiveChip="qsp_Item_yt1_2"
			  QuickComposeVipLevel="2"
			  QuickComposeMaxCount="10"/>
</Object>
