<?xml version="1.0" encoding="utf-8" ?>
<object>
    <properties>
    </properties>
    <records>
        <record name="player_prop_backup_rec" cols="2" maxrows="200" save="false" public="false" private="false" desc="玩家属性数据备份表，本地服用">
            <column type="string" desc="属性名" />
            <column type="int" desc="属性值"/>
        </record>
        <record name="hero_npc_prop_backup_rec" cols="3" maxrows="50" save="false" public="false" private="false" desc="竞技场中，玩家挑战的heronpc属性数据备份表，member服数值验证用">
            <column type="int" desc="属性名索引号" />
            <column type="int" desc="属性值"/>
            <column type="int" desc="属性值附加值"/>
        </record>
        
        <record name="player_fight_modify_backup_rec" cols="8" maxrows="200" save="false" public="false" private="false" desc="用于在member服中备份装备、符文、武神、练星、灵魂连接等属性刷新数值，便于分析问题">
