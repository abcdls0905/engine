		<property name="DefenceSaodangDate" type="int64" public="false" private="true" save="true" desc="扫荡次数"/>
		
		<property name="DefenceRandomScene" type="int" public="false" private="true" save="true" desc="随机场景"/>
		<property name="DefenceRandomBuff" type="string" public="false" private="true" save="true" desc="随机buff"/>
		<property name="LastRandomBuffTime" type="int64" public="false" private="true" save="true" desc="上次刷新buff时间"/>
		<property name="PayRandCount" type="int" public="false" private="true" save="true" desc="钻石刷新buff次数"/>
		<property name="LastPayRandTime" type="int64" public="false" private="true" save="true" desc="上次钻石刷新时间"/>
		<property name="DefenceResetCount" type="int" public="false" private="true" save="true" desc="今日重置次数"/>
		<property name="LastDefenceResetTime" type="int64" public="false" private="true" save="true" desc="上次重置时间"/>
	</properties>
	<records>
		<record name="ArenaFightRec" cols="7" maxrows="20" save="true" public="false" private="true" desc="竞技场配对挑战榜">
			<column type="string" desc="玩家uid"/>
			<column type="widestr" desc="玩家名字"/>
			<column type="dword" desc="玩家排名"/>
			<column type="dword" desc="金钱奖励"/>
			<column type="dword" desc="声望奖励"/>
			<column type="word" desc="等级"/>
			<column type="word" desc="角色"/>
		</record>
		<record name="ArenaRankRec" cols="7" maxrows="20" save="false" public="false" private="true" desc="竞技场挑战榜">
			<column type="string" desc="玩家uid"/>
			<column type="widestr" desc="玩家名字"/>
			<column type="dword" desc="玩家排名"/>
			<column type="dword" desc="金钱奖励"/>
			<column type="dword" desc="声望奖励"/>
			<column type="word" desc="等级"/>
			<column type="word" desc="角色"/>
		</record>
		<record name="ArenaShopRec" cols="8" maxrows="20" save="true" public="false" private="true" desc="竞技场玩家所在名次">
			<column type="word" desc="条目id"/>
			<column type="string" desc="物品id"/>
			<column type="dword" desc="物品数目"/>
			<column type="dword" desc="已兑换数量"/>
			<column type="dword" desc="当日可兑换数量"/>
			<column type="dword" desc="总共可兑换数量"/>
			<column type="dword" desc="价格"/>
			<column type="byte" desc="是否推荐"/>
		</record>
	</records>
</object>
