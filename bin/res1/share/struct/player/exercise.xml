		<property name="ArenaAwardFreshTime" type="double" public="false" private="true" save="false" realtime="" desc="竞技场奖励刷新时间"/>
		<property name="ArenaEnemyUid" type="string" public="false" private="false" save="false" realtime="" desc="竞技场奖励刷新时间"/>
		<property name="ArenaRank" type="int" public="false" private="false" save="true" realtime="" desc="竞技场排名"/>
		<property name="HighestArenaRecord" type="int" public="false" private="false" save="true" desc="竞技场个人排名纪录"/>
		<property name="SportRewardFlag" type="int" public="false" private="true" save="false" desc="战斗标志位"/>
		
		<!--擂台信息记录-->
		<property name="DefenceHpLeft" type="int" public="false" private="true" save="true" realtime="true" desc="剩余血量百分比"/>
