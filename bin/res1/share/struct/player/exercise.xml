		<property name="DefenceStartTime" type="int64" public="false" private="false" save="true" desc="最近一次开始擂台的时间(第一次取到对手开始计算)"/>
		<property name="DefenceFighterUid" type="string" public="false" private="false" save="true" desc="当前对手"/>
		<property name="DefenceSpendTime" type="int" public="false" private="true" save="true" desc="通关时间"/>
		
		<property name="DefenceNormalMaxCount" type="int" public="false" private="true" save="true"  realtime="true" desc="简单难度最高关卡"/>
		<property name="DefenceHardMaxCount" type="int" public="false" private="true" save="true"  realtime="true" desc="困难难度最高关卡"/>
		<property name="DefenceExtremeMaxCount" type="int" public="false" private="true" save="true"  realtime="true" desc="噩梦难度最高关卡"/>
		<property name="DefenceMaxResetTime" type="double" public="false" private="true" save="true" desc="通关记录清除"/>
