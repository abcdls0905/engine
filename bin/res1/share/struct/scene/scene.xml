	<!-- 基本属性 -->
	<properties>
		<property name="ConfigID" type="string" public="true" private="true" save="false" desc="场景编号"/>
		<property name="ProtoSceneID" type="int" public="true" private="true" save="false" desc="原形场景编号"/>
