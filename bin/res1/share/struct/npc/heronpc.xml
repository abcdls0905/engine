<?xml version="1.0" encoding="gb2312"?>
<!--英雄类NPC基础属性-->
<object>
	  <internals>
        <property name="VisualRange" type="float" public="true" private="true" save="false" desc="视野半径" />
      	<property name="Type" type="byte" public="true" private="true" save="false" realtime="" desc="类型: TYPE_NPC" />
    </internals>
    <!-- 基本属性 -->
    <properties>
        <property name="ConfigID" type="string" public="true" private="true" save="true" desc="NPC ID"/>
        <property name="Resource" type="string" public="true" private="true" save="false" desc="资源"/>
        <property name="Level" type="int" public="true" private="true" save="false" realtime="" desc="npc的等级" />
        <property name="Height" type="float" public="true" private="true" save="false" realtime="" desc="模型高度" />
        <property name="Scale" type="string" public="true" private="false" save="false" realtime="" desc="模型缩放比例" />
        <property name="RoleIndex" type="int" public="true" private="true" save="true" desc="角色索引"/>
        <property name="ForceID" type="int" public="true" private="true" save="false" desc="战斗关系"/>	
        <property name="AutoControl" type="int" public="false" private="false" save="false" desc="自动战斗"/>
        <property name="Transparency" type="int" public="true" private="false" save="false" realtime="" desc="透明度"/>
        <property name="BattleAbility" type="int" public="true" private="false" save="false" realtime="" desc="战斗力" />
        <property name="FightID" type="string" public="true" private="true" save="false" realtime="" desc="战斗包ID" />
        <property name="SkillList" type="string" public="true" private="true" save="false" realtime="" desc="战斗包ID" /> 
		<property name="ClothRealQuality" type="int" public="true" private="true" save="true" realtime="true" desc="衣服金装品质"/>
		<property name="WeaponRealQuality" type="int" public="true" private="true" save="true" realtime="true" desc="武器金装品质"/>
		<property name="SkinID" type="string" public="true" private="true" save="true" realtime="true" desc="武神皮肤"/>
		<property name="WingFlyLv" type="int" public="true" private="true" save="true" realtime="true" desc="用于翅膀飞升模型改变"/>
		<property name="RevivalLevel" type="byte" public="true" private="true" save="true" realtime="true" desc="人物转生阶位"/>
		<property name="RevivalSubLevel" type="byte" public="true" private="true" save="true" realtime="true" desc="人物转生小等级"/>
      
      <property name="AttackNpcType" type="int" public="true" private="false" save="false" realtime="" desc="攻击npc类型（给HeroNpc临时添加该属性）" />

	</properties>
		<records>
			<record name="fight_pet_rec" cols="5" maxrows="32" save="true" public="false" private="true" realtime="true" desc="出征宠物列表">
            <column type="string" desc="宠物名称" />
            <column type="dword" desc="宠物分组" />
            <column type="dword" desc="组内index" />
            <column type="dword" desc="容器index" />
            <column type="object" desc="宠物persistid" />
        </record>
		</records>

    <includes>
		<path name="struct\rule\shortcut.xml" desc="技能栏相关属性"/>
		<path name="struct\rule\visequip.xml" desc="可视装备"/>
		<path name="struct\rule\visfashion.xml" desc="可视装备"/>
		<path name="struct\rule\motion.xml" desc="N移动属性"/>
		<path name="struct\rule\commonfighter.xml" desc="战斗相关属性"/>
		<path name="struct\rule\common\basectrlprop.xml" desc="控制属性" />
    <path name="struct\npc\rule\modifybase.xml" desc="属性 技能 buff修正表" />
    </includes>
</object>
