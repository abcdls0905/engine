<?xml version="1.0" encoding="utf-8" ?>
<!--定义坐骑共用属性，在member、room中配置相同的属性定义在这里-->
<object>
	<internals />
	<properties>
        <property name="BornAction" type="string" public="false" private="false" save="false" realtime="" desc="出生动作" />
        <property name="BornProtectTime" type="int" public="false" private="false" save="false" desc="保护时间（可跟进动作时间来设定）"/>
        <property name="FightAction" type="string" public="false" private="true" save="false" realtime="" desc="npc进入战斗动作" />
        <property name="FightProtectTime" type="int" public="false" private="true" save="false" realtime="" desc="npc进入战斗保护时间" />
        <property name="KeDamageRadius" type="float" public="false" private="false" save="false" desc="受伤害半径"/>
		<property name="BattleAbility" type="int" public="false" private="true" save="false" realtime="true" desc="坐骑战斗力"/>
        <property name="Camp" type="byte" public="false" private="false" save="false" desc="阵营"/>
        <property name="RideType" type="byte" public="false" private="false" save="false" desc="坐骑类型"/>
        <property name="GradeLevel" type="byte" public="false" private="true" save="true" realtime="true" desc="坐骑品阶等级"/>
        <property name="SpiritId" type="string" public="false" private="false" save="false" realtime="" desc="战魂Id"/>
        <property name="Skill" type="string" public="false" private="true" save="false" realtime="" desc="需要显示的技能"/>
        <property name="RideAllSkill" type="string" public="false" private="false" save="false" realtime="" desc="坐骑需要放的全部技能"/>        
		<property name="Exp" type="int" public="false" private="true" save="true" realtime="true" desc="当前经验值"/>
        <property name="CanHitBossDamageRatio" type="int" public="false" private="false" save="false" desc="命中boss时的额外伤害比率是否有效"/>
        <property name="LevelEffect" type="string" public="false" private="false" save="false" desc="脚下光圈"/>
        <property name="TalismanOffset" type="string" public="false" private="false" save="false" desc="法宝位置偏移"/>
		<property name="DeployID" type="byte" public="false" private="false" save="true" desc="当前阵法ID"/>
		<property name="LackEquipProp" type="string" public="false" private="false" save="false" desc="缺失装备属性"/>
		<property name="AssistSkill" type="string" public="false" private="false" save="false" realtime="" desc="副驾驶玩家显示的技能"/>
        <property name="AssistRideAllSkill" type="string" public="false" private="false" save="false" realtime="" desc="副驾驶玩家显示的全部技能"/>
        <property name="DoubleRide" type="byte" public="true" private="true" save="false" realtime="" desc="双人坐骑"/>
        <property name="DoubleOnRide" type="byte" public="false" private="false" save="false" realtime="" desc="双人骑上坐骑"/>
		<property name="PlayerObject" type="object" public="false" private="false" save="false" realtime="true" desc="释放技能的玩家对象" />
        <property name="IsHideRole" type="byte" public="true" private="true" save="false" realtime="" desc="是否隐藏角色模型"/>		
    </properties>
    <records>
		<record name="ride_equip_rec" cols="2" maxrows="8" save="true" public="false" private="true" realtime="true" desc="坐骑装备表">
            <column type="string" desc="装备位置" />
            <column type="dword" desc="对应装备index" />
		</record>
    </records>
    <includes>
        <path name="struct\npc\rule\modifybase.xml" desc="属性 技能 buff修正表" />     
		<path name="struct\ai\ai_npc_data.xml" desc="AI属性" />
        <path name="struct\ai\ai_motion.xml" desc="AI属性" />
		<path name="struct\npc\npcproperty\evo.xml" desc="NPC进阶配置" />
		<path name="struct\npc\verify\verify.xml" desc="客户端伤害验证" />
    </includes>
</object>
