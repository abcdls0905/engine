<!-- 
	ID字段为频道定义
//聊天类型定义
enum
{
    //禁言一个频道都不准进入
    CHATTYPE_INVALID = 0,
	//世界聊天
	CHATTYPE_WORLD,
	//私聊
	CHATTYPE_WHISPER,
	//组队
	CHATTYPE_TEAM,
	//血盟
	CHATTYPE_GUILD,
	//附近
	CHATTYPE_NEAR,
	//系统
	CHATTYPE_SYSTEM,
	//攻城战
	CHATTYPE_CASTLE_WAR,
	//卢云
	CHATTYPE_LUYUN,
	//大团队
	CHATTYPE_BIG_TEAM,
	//GM广播频道
	CHATTYPE_GM,
	//私聊回显
	CHATTYPE_WHISPER_SHOWBACK = 24,

	//不要超过32 超过的机会失效
	CHATTYPE_MAX = 31,
};

RefUserNum	参考用户数(必须是~99999之间的数值，否则创建失败)，用于负载平衡
RealAudoFlag	是否支持实时语音 1支持，0不支持
MaxMsgSaveCount	保存消息最大数量，0 是不保存消息
MaxMsgSaveTime	保存消息最长时间单位秒
IsTempRoom	是否是临时房间1是，0否
LifeTime 房间有效期限，单位是秒，从创建房间开始
<Base> : 
	RecordingSystemVolume->录音时系统音量 配置范围 0~1 0=静音
	PlayingSystemVolume->播放时系统音量 配置范围 0~1 
-->
<Object>
	<Base AppID="2002" RecordingSystemVolume="0.0" PlayingSystemVolume="0.2" />
	<Property ID="1" desc="世界聊天" RefUserNum="3000" RealAudoFlag="0" MaxMsgSaveCount="10000000"  MaxMsgSaveTime="1800" IsTempRoom="0" LifeTime="99999999"/>
	<Property ID="2" desc="私聊" RefUserNum="2" RealAudoFlag="0" MaxMsgSaveCount="100"  MaxMsgSaveTime="1800" IsTempRoom="1" LifeTime="1800"/>
	<Property ID="3" desc="组队" RefUserNum="5" RealAudoFlag="0" MaxMsgSaveCount="100"  MaxMsgSaveTime="1800" IsTempRoom="1" LifeTime="1800"/>
	<Property ID="4" desc="公会" RefUserNum="200" RealAudoFlag="0" MaxMsgSaveCount="1000"  MaxMsgSaveTime="1800" IsTempRoom="0" LifeTime="99999999"/>
	<Property ID="7" desc="阵营" RefUserNum="100" RealAudoFlag="0" MaxMsgSaveCount="1000"  MaxMsgSaveTime="1800" IsTempRoom="0" LifeTime="99999999"/>
	<Property ID="8" desc="战场" RefUserNum="20" RealAudoFlag="0" MaxMsgSaveCount="1000"  MaxMsgSaveTime="1800" IsTempRoom="1" LifeTime="1800"/>
	<Property ID="9" desc="公会答题" RefUserNum="40" RealAudoFlag="0" MaxMsgSaveCount="1000"  MaxMsgSaveTime="1800" IsTempRoom="1" LifeTime="86400"/>
</Object>
