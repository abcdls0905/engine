<!--场景基础属性-->
<object>
    <!-- 内部属性 -->
    <internals>
        <property name="Name" type="widestr" public="true" private="true" save="false" desc="" />
        <property name="Grouping" type="dword" public="false" private="false" save="false" desc="" />
    </internals>
    <!-- 基本属性 -->
    <properties>
        <property name="ConfigID" type="string" public="true" private="true" save="false" desc="场景编号" />
        <property name="ProtoSceneID" type="dword" public="true" private="true" save="false" desc="原形场景编号" />
        <property name="Resource" type="string" public="true" private="true" save="false" desc="场景基础资源名称" />
        <property name="SceneType" type="dword" public="true" private="false" save="false" desc="场景类型(0=一般场景,1=本地副本,2=远程服务器副本)" />

        <property name="TransferPos1" type="string" public="false" private="false" save="false" desc="场景中传送点，不是出生点。1号阵营传送点" />
        <property name="TransferPos2" type="string" public="false" private="false" save="false" desc="场景中传送点，不是出生点。2号阵营传送点" />
        <property name="TransferPos0" type="string" public="false" private="false" save="false" desc="场景中传送点，不是出生点。0号阵营传送点，room中用" />
        
        <property name="CanFight" type="dword" public="true" private="false" save="false" desc="是否可以战斗(0=不可战斗,1=战斗)" />
		<property name="CanRide" type="dword" public="true" private="false" save="false" desc="是否可以使用坐骑(0=不可,1=可以)" />
		<property name="CanFly" type="dword" public="true" private="false" save="false" desc="是否可以飞行(0=不可,1=可以)" />
		<property name="CantRestore" type="dword" public="false" private="false" save="false" desc="是否可以回血回蓝(0=可以回血，1=不可以回血)" />
		
		<property name="ProtectCheckTime" type="dword" public="false" private="false" save="false" need_defined="member" desc="击杀保护时间，时间内被玩家杀死会累计次数" />
		<property name="ProtectBuffID" type="string" public="false" private="false" save="false" need_defined="member" desc="死亡次数超限，加保护buff" />
		<property name="BeKillTopLimit" type="dword" public="false" private="false" save="false" need_defined="member" desc="被杀次数上限" />
		
		<property name="RandomRadius" type="dword" public="false" private="false" save="false" desc="玩家当前场景随机位置的半径" />
		<property name="SceneCollidePath" type="string" public="true" private="true" save="false" desc="寻路基础资源名称" />
		
		<property name="CampAPlayerCount" type="dword" public="true" private="true" save="false" desc="A队人数" />
		<property name="CampBPlayerCount" type="dword" public="true" private="true" save="false" desc="B队人数" />
		<property name="CampMaxPlayerCount" type="dword" public="true" private="true" save="false" desc="一队的最大人数" />
		
		<property name="CampAScore" type="dword" public="true" private="true" save="false" desc="A队积分" />
		<property name="CampBScore" type="dword" public="true" private="true" save="false" desc="B队积分" />
		<property name="CampMaxScore" type="dword" public="true" private="true" save="false" desc="获胜需要的积分" />
		
		<property name="BattleWarID" type="dword" public="false" private="false" save="false" realtime="" desc="玩法类型" />
		
		<property name="BaseHeight" type="float" public="true" private="true" save="false" desc="水平高度" />
		<property name="UpperLimitHeight" type="float" public="true" private="true" save="false" desc="上限高度" />
		<property name="LowerLimitHeight" type="float" public="true" private="true" save="false" desc="下限高度" />
    </properties>
    <!-- 表属性 -->
    <records>
        <record name="AllGroupBossRec" cols="2" maxrows="1024" save="false" public="false" private="false" desc="场景分组号对应创建的boss">
            <column type="word" desc="分组号" />
            <column type="string" desc="创建的boss信息" />
        </record>
		<record name="OfflinePlayerRec" cols="6" maxrows="1024" save="false" public="false" private="false" desc="离线玩家">
			<column type="object" desc="离线玩家的PERSISTID"/>
			<column type="word" desc="位置索引"/>
            <column type="word" desc="GroupID"/>
            <column type="word" desc="查询状态状态"/>
			<column type="int64" desc="下次刷新时间"/>	
			<column type="word" desc="开关"/>
		</record>
		<record name="group_info_rec" cols="4" maxrows="10000" save="false" public="false" private="false" desc="分组信息表">
			<column type="word" desc="分组号" />
			<column type="object" desc="分组管理器PERSISTID" />
			<column type="word" desc="分组类型" />
			<column type="word" desc="当前人数" />
		</record>
        <record name="ArenaRandomWaitingObjectRec" cols="2" maxrows="1000" save="false" public="false" private="false" desc="请求随机匹配进入竞技场的对象列表">
            <column type="object" desc="等待进入竞技场的对象" />
            <column type="int64" desc="开始等待的时间" />
		</record>
        <record name="ArenaMatchWaitingObjectRec" cols="2" maxrows="1000" save="false" public="false" private="false" desc="请求实力范围匹配进入竞技场的对象列表">
            <column type="object" desc="等待进入竞技场的对象" />
            <column type="int64" desc="开始等待的时间" />
		</record>
        <record name="ArenaPKObjectRec" cols="4" maxrows="2000" save="false" public="false" private="false" desc="在pk中的对象列表">
            <column type="word" desc="分组号" />
            <column type="object" desc="在竞技场中pk的对象" />
            <column type="object" desc="在竞技场中pk的对象" />
            <column type="int64" desc="在竞技场中pk的对象" />
		</record>
		<record name="SceneLinePlayerCount" cols="3" maxrows="8" save="false" public="true" private="true" desc="场景真分线玩家数量表">
			<column type="word" desc="分线场景号" />
			<column type="word" desc="本线玩家当前数量" />
			<column type="word" desc="本线玩家最大数量" />
		</record>
    </records>
    <!--从其他文件加载属性-->
    <includes>
        <path name="struct\common\trigger.xml" desc="触发器" />
		<path name="struct\common\trigger_guid.xml" desc="触发器guid" />
		<path name="struct\common\trigger_scene_prop_only.xml" desc="触发器场景独有属性" />
		<path name="struct\scene\worldboss_scene.xml" desc="世界Boss伤害统计表" />
        <path name="struct\rule\damage_show.xml" desc="伤害统计相关"/>
		<path name="struct\scene\dragoncraft_scene.xml" desc="龙城争霸相关"/>
    </includes>
</object>
