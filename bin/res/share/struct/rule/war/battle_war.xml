<?xml version="1.0" encoding="utf-8" ?>
<object>
    <properties>
        <property name="Camp" type="dword" public="true" private="true" save="false" realtime="" desc="战场阵营号" />
        <property name="BattleWarID" type="dword" public="true" private="true" save="false" realtime="true" desc="战场编号" />
		<property name="PlayerCrossState" type="dword" public="false" private="true" save="false" realtime="true" desc="跨服状态" />
		<property name="PlayerCrossType" type="dword" public="false" private="true" save="false" realtime="true" desc="跨服类型" />
		<property name="BattleFieldMultiReward" type="byte" public="false" private="false" save="false" realtime="" desc="战场是否双倍奖励" />

		<property name="ArmyGrade" type="dword" public="true" private="true" save="true" realtime="" desc="军阶等级" />
		<property name="ArmyScore" type="int64" public="false" private="true" save="true" desc="军阶积分" />
		<property name="ArmyAwardDate" type="double" public="false" private="false" save="true" realtime="" desc="最近一次领取军饷的时间" />
		<property name="ArmyGradeResetDate" type="double" public="false" private="false" save="true" realtime="" desc="下一次重置军阶的时间" />
		<property name="ArmyScoreDailyDate" type="double" public="false" private="false" save="true" realtime="" desc="每日野外击杀获得功勋上限的最近刷新时间" />
		<property name="ArmyScoreDailyLimit" type="int64" public="false" private="false" save="true" realtime="" desc="每日野外击杀获得功勋的上限" />
    </properties>
    <records>
		<record name="battlefield_enter_count_rec" cols="2" maxrows="20" save="true" public="false" private="false" desc="战场已经进入的次数表">
			<column type="dword" desc="战场类型"/>
			<column type="dword" desc="已经进入的次数"/>
		</record>
		<record name="battlefield_reward_count_rec" cols="2" maxrows="20" save="true" public="false" private="false" desc="战场已经奖励的数量表">
			<column type="dword" desc="奖励类型"/>
			<column type="dword" desc="已经奖励的数量"/>
		</record>
		<record name="battlewar_helpattack_rec" cols="2" maxrows="1000" save="false" public="false" private="false" desc="被攻击者身上的助攻表">
			<column type="widestr" key="default" desc="攻击者名字"/>
			<column type="int64"   desc="攻击时间"/>
		</record>
		<record name="battlewar_visplayer_rec" cols="1" maxrows="60" save="false" public="false" private="false" desc="在玩家视野内的友方玩家">
			<column type="object"  desc="对象ID"/>
		</record>
		<record name="battlewar_visnpc_rec" cols="1" maxrows="30" save="false" public="false" private="false" desc="在玩家视野内的NPC对象">
			<column type="object"  desc="对象ID"/>
		</record>
    </records>
	<includes>
		<path name="struct\rule\war\battle_war_arena.xml" desc="竞技场(跨服)相关"/>
		<path name="struct\rule\war\battle_war_teamclone.xml" desc="团队副本相关"/>
	</includes>
</object>
