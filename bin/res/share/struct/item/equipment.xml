<!--Equip_Item的属性表，继承自Nim_Item，所有可装备的物品的基类-->
<object>
	<!-- 基本属性 -->
	<properties>
		<property name="AdvHP" type="Int" public="false" private="true" save="true" desc="每次进阶增长的血量"/>
		<property name="AdvAtk" type="Int" public="false" private="true" save="true" desc="每次进阶增长的攻击"/>
		<property name="StrengthenAtk" type="Int" public="false" private="true" save="true" desc="每次强化增长的攻击"/>
		<property name="AdvPropPackage" type="string" public="false" private="true" save="true" desc="进阶属性包"/>
		<property name="StrengthenPropPackage" type="string" public="false" private="true" save="true" desc="强化属性包"/>
		<property name="StrengthenCurLevel" type="Int" public="false" private="true" save="true" realtime="true" desc="当前强化等级"/>
		<property name="UpgradeCurLevel" type="Int" public="false" private="true" save="true" realtime="true" desc="当前进阶等级"/>
		<property name="EquipType" type="string" public="false" private="true" save="false" desc="装备栏位类型, 见EquipDefine.ini文件中的定义"/>
		<property name="FightingCapacity" type="int" public="false" private="true" save="true" desc="装备战斗力"/>
		<property name="ElementLabel" type="string" public="false" private="true" save="true" desc="元素标签"/>
		<property name="SpecialLabel" type="string" public="false" private="true" save="true" desc="特殊标签"/>
		<property name="ColorLabel" type="int" public="false" private="true" save="true" desc="颜色标签"/>
		<property name="NameLabel" type="int" public="false" private="true" save="true" desc="装备标签"/>
		<property name="Suit" type="string" public="false" private="true" save="false" desc="套装ID"/>
		<property name="RoleFit" type="string" public="false" private="true" save="false" desc="推荐职业包ID"/>
		<property name="StrengthenHP" type="Int" public="false" private="true" save="false" desc="每次强化增长的HP"/>
		<property name="StrengthenAD" type="Int" public="false" private="true" save="false" desc="每次强化增长的物理攻击"/>
		<property name="StrengthenAP" type="Int" public="false" private="true" save="false" desc="每次强化增长的法术攻击"/>
		<property name="StrengthenADDef" type="Int" public="false" private="true" save="false" desc="每次强化增长的物理防御"/>
		<property name="StrengthenAPDef" type="Int" public="false" private="true" save="false" desc="每次强化增长的法术防御"/>
		<property name="UpgradeHP" type="Int" public="false" private="true" save="false" desc="每次精炼增长的HP"/>
		<property name="UpgradeAD" type="Int" public="false" private="true" save="false" desc="每次精炼增长的物理攻击"/>
		<property name="UpgradeAP" type="Int" public="false" private="true" save="false" desc="每次精炼增长的法术攻击"/>
		<property name="UpgradeADDef" type="Int" public="false" private="true" save="false" desc="每次精炼增长的物理防御"/>
		<property name="UpgradeAPDef" type="Int" public="false" private="true" save="false" desc="每次精炼增长的法术防御"/>
		<property name="RedBind" type="Int" public="false" private="true" save="true" desc="红装绑定"/>
    <property name="FlyUp" type="Int" public="false" private="true" save="false" desc="每次精炼增长的法术防御"/>
    <property name="jcsx" type="int" public="false" private="false" save="false" desc="基础属性"/>
    <property name="tssx" type="int" public="false" private="false" save="false" desc="初始特殊属性"/>
    <property name="qhsx" type="int" public="false" private="false" save="false" desc="强化属性"/>
    <property name="jlsx" type="int" public="false" private="false" save="false" desc="精炼属性"/>
    <property name="qhjh" type="int" public="false" private="false" save="false" desc="强化激活属性"/>
    <property name="jljh" type="int" public="false" private="false" save="false" desc="精炼激活属性"/>
    <property name="tzsx" type="int" public="false" private="false" save="false" desc="套装属性"/>
		<property name="WingFashion" type="string" public="false" private="true" save="true" realtime="true" desc="翅膀时装configID列表，逗号隔开"/>
		<property name="ActiveWingFashion" type="string" public="false" private="true" save="true" realtime="true" desc="当前激活的翅膀时装"/>
  </properties>
	<!--策划要求装备的修正表必须保存不得重刷-->
	<records>
		<record name="OpenLockStrenRec" cols="7" maxrows="16" save="true" public="false" private="true" desc="强化解锁属性表">
			<column type="string" desc="属性名"/>
			<column type="DWORD" desc="属性值"/>
			<column type="DWORD" desc="解锁条件"/>
			<column type="DWORD" desc="是否为激活状态1为激活0为不激活即不能起到作用"/>
			<column type="DWORD" desc="是否阴影显示1为显示0为不显示，无论显示与否都不在装备上起作用"/>
			<column type="string" desc="说明文字ID"/>
			<column type="string" desc="说明文字ID"/>
		</record>
		<record name="OpenLockUpgradeRec" cols="7" maxrows="16" save="true" public="false" private="true" desc="进阶解锁属性表">
			<column type="string" desc="属性名"/>
			<column type="DWORD" desc="属性值"/>
			<column type="DWORD" desc="解锁条件"/>
			<column type="DWORD" desc="是否为激活状态1为激活0为不激活即不能起到作用"/>
			<column type="DWORD" desc="是否阴影显示1为显示0为不显示，无论显示与否都不在装备上起作用"/>
			<column type="string" desc="说明文字ID"/>
			<column type="string" desc="说明文字ID"/>
		</record>
		<record name="AwakeRec" cols="3" maxrows="16" save="true" public="false" private="true" realtime="true" desc="觉醒表">
            <column type="DWORD" desc="觉醒ID"/>
			<column type="DWORD" desc="觉醒等级"/>
			<column type="DWORD" desc="觉醒槽位"/>
        </record>
    <record name="WingCellRec" cols="6" maxrows="10" save="true" public="false" private="true" realtime="true" desc="翅膀镶嵌孔，保存孔位类型，品质和镶嵌的宝石">
      <column type="DWORD" desc="孔位类型，1金2木3水4火5土"/>
      <column type="DWORD" desc="孔位品质，绿蓝紫橙..."/>
      <column type="DWORD" desc="此孔位镶嵌的宝石ID"/>
      <column type="DWORD" desc="此孔位镶嵌的宝石等级"/>
      <column type="DWORD" desc="临时保存随机品质"/>
      <column type="DWORD" desc="临时保存随机等级"/>
    </record>
  </records>
</object>
