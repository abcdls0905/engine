<?xml version="1.0" encoding="utf-8" ?>
<object>
    <internals />
    <properties>
		<property name="MountConfig" type="string" public="true" private="true" save="false" realtime="true" desc="正在骑乘的坐骑名,模型变异特殊信息" />
		<property name="RideAppendAction" type="string" public="true" private="true" save="false" realtime="true" desc="坐骑后缀动作" />
		<property name="RideOn" type="int" public="false" private="false" save="true" realtime="" desc="当前骑乘状态" />
		<property name="RideViewIndex" type="int" public="false" private="true" save="true" realtime="true" desc="当前上阵坐骑" />
		<property name="RideObject" type="object" public="false" private="true" save="false" realtime="" desc="当前上阵坐骑对象" />
		<property name="RideStamina" type="int" public="true" private="true" save="false" desc="当前坐骑耐力值"/>
		<property name="RideMaxStamina" type="int" public="true" private="true" save="false" desc="当前最大耐力值"/>
		<property name="RideHuntDiscAngle" type="float" public="false" private="true" save="false" realtime="true" desc="狩猎盘指针角度值" />
		<property name="RideGroup" type="byte" public="false" private="true" save="true" realtime="true" desc="当前坐骑组" />
		<property name="HunterStar" type="int" public="false" private="true" save="true" desc="星级猎人等级"/>
		<property name="HunterStarExp" type="int" public="false" private="true" save="true" desc="星级猎人经验值"/>
		<property name="HuntTech" type="int" public="false" private="true" save="true" desc="猎术等级"/>
		<property name="HuntTechExp" type="int" public="false" private="true" save="true" desc="猎术经验值"/>
		<property name="RideTech" type="int" public="false" private="true" save="true" desc="骑术等级"/>
		<property name="RideTechExp" type="int" public="false" private="true" save="true" desc="骑术经验值"/>
		<property name="FirstRideFlyMount" type="byte" public="false" private="true" save="true" desc="第一次骑飞行坐骑"/>
		<property name="RideOpenPos" type="int" public="false" private="true" save="true" desc="坐骑副本当前解锁顺位"/>
		
		<property name="GroundRideMutatePercent" type="int" public="false" private="false" save="false" desc="地面坐骑增加变异几率"/>
		<property name="FlyRideMutatePercent" type="int" public="false" private="false" save="false" desc="飞行坐骑增加变异几率"/>
		<property name="ARideMutatePercent" type="int" public="false" private="false" save="false" desc="A及以上增加变异几率"/>
		<property name="SRideMutatePercent" type="int" public="false" private="false" save="false" desc="S时增加变异几率"/>
		<property name="IncRideGrade" type="byte" public="false" private="false" save="false" desc="狩猎评级时增加一个等级"/>
		<property name="DecHuntScorePoint" type="int" public="false" private="false" save="false" desc="狩猎所需积分减少固定值"/>
		<property name="IncZone1PerHuntScore" type="int" public="false" private="true" save="false" desc="S每秒获得积分提升"/>
		<property name="IncZone2PerHuntScore" type="int" public="false" private="true" save="false" desc="A每秒获得积分提升"/>
		<property name="IncZone3PerHuntScore" type="int" public="false" private="true" save="false" desc="B每秒获得积分提升"/>
		<property name="IncZone4PerHuntScore" type="int" public="false" private="true" save="false" desc="C每秒获得积分提升"/>
		<property name="IncHuntTime" type="int" public="false" private="false" save="false" desc="狩猎持续时间增加"/>
		<property name="IncActionInterval" type="int" public="false" private="false" save="false" desc="挣扎间隔时间增加(秒)"/>

		<property name="ImmunStaminaMut" type="int" public="false" private="false" save="false" desc="普工不消耗耐久值的几率"/>
		<property name="ImmunSkillStaminaMut" type="int" public="false" private="false" save="false" desc="技能不消耗耐久值的几率"/>

		<property name="ConvertStaminaMut" type="int" public="false" private="false" save="false" desc="耐久值转换比(伤害按照一定比例转化为耐久值)"/>
		<property name="ConvertMaxStamina" type="int" public="false" private="false" save="false" desc="耐力值转换上限"/>
		
		<property name="StaminaRideOff" type="int" public="false" private="true" save="true" desc="耐力为0是否自动下马:默认不自动下马"/>

		<property name="CostStaminaMul" type="float" public="false" private="false" save="false" desc="耐力值消耗百分比"/>

    </properties>
    <records>
		<record name="ride_hunt_rec" cols="2" maxrows="64" save="true" public="false" private="true" desc="坐骑狩猎表">
			<column type="string" desc="坐骑ID"/>
			<column type="dword" desc="PropPack"/>
		</record>
		<record name="ride_get_rec" cols="3" maxrows="64" save="true" public="false" private="true" desc="坐骑获取表">
			<column type="string" desc="坐骑ID"/>
			<column type="byte" desc="是否捕获"/>
			<column type="byte" desc="绑定状态"/>
		</record>
		<record name="ride_book_rec" cols="3" maxrows="64" save="true" public="false" private="true" desc="坐骑图鉴时间解锁表">
			<column type="string" desc="坐骑ID"/>
			<column type="byte" desc="是否已解锁"/>
			<column type="int64" desc="当前坐骑副本解锁时刻(解锁开始的时刻)"/>
		</record>
		<record name="ride_hunt_clone_rec" cols="6" maxrows="64" save="true" public="false" private="true" desc="坐骑狩猎副本表(当前开启难度)">
			<column type="string" desc="坐骑ID"/>
			<column type="byte" desc="难度"/>
			<column type="byte" desc="简单奖励"/>
			<column type="byte" desc="普通奖励"/>
			<column type="byte" desc="困难奖励"/>
			<column type="byte" desc="噩梦奖励"/>
		</record>
		<record name="ride_battle_rec" cols="2" maxrows="32" save="true" public="false" private="true" desc="坐骑上阵表">
			<column type="dword" desc="组号<<4 + 位置"/>
			<column type="dword" desc="坐骑索引"/>
		</record>
		<record name="ride_star_rec" cols="3" maxrows="64" save="false" public="false" private="true" desc="坐骑升星表">
			<column type="string" desc="坐骑ID"/>
			<column type="dword" desc="坐骑索引"/>
			<column type="dword" desc="升星等级"/>
		</record>
		<record name="ride_hunt_disc_rec" cols="10" maxrows="10" save="false" public="false" private="true" desc="坐骑狩猎盘表">
			<column type="word" desc="区域ID"/>
			<column type="word" desc="一边区域角度范围值"/>
			<column type="dword" desc="奖励属性包"/>
			<column type="string" desc="宝箱ID"/>
			<column type="word" desc="宝箱品质"/>
			<column type="dword" desc="宝箱角度刻度值"/>
			<column type="word" desc="宝箱是否打开"/>
			<column type="word" desc="宝箱打开可以获得的积分"/>
			<column type="word" desc="停留在该区域每秒获得的积分"/>
			<column type="dword" desc="获得该评级的驯服时间上限"/>
		</record>
		<record name="ride_hunt_effect_rec" cols="4" maxrows="10" save="false" public="false" private="true" desc="坐骑驯服是挣扎效果用到的表格">
			<column type="dword" desc="效果细分类型"/>
			<column type="dword" desc="效果表现在狩猎盘上的角度值"/>
			<column type="dword" desc="是否触发了效果"/>
			<column type="dword" desc="效果触发后的一次性积分增减"/>
		</record>
	</records>
    <includes />
</object>
