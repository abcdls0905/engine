<!--路径表-->
<object>
	<!-- 基本属性 -->
	<properties>
		<property name="PathFinding"	type="int"		public="false"  private="false" 	save="false" desc="是否寻路中"/>
	</properties>
	<records>
		<record name="PatrolPointRec" cols="14" maxrows="256" save="false" public="false" private="false" desc="巡逻表">
			<column type="float" desc="x"/>
			<column type="float" desc="y"/>
			<column type="float" desc="z"/>
			<column type="float" desc="停留下来的朝向Face"/>
			<column type="int" desc="停留时间Stoptime单位毫秒?"/>
			<column type="string" desc="播放的动作(不能填nil)Stopaction循环播放"/>
			<column type="string" desc="播放的特效(没有填nil)Stopeffect"/>
      		<column type="string" desc="播放的音乐Stopvoice"/>
			<column type="string" desc="走向下一点需要播放的动作(不能填nil)Nextroadaction"/>
			<column type="string" desc="走向下一点需要播放的特效(没有填nil)Nextroadeffect"/>
      		<column type="string" desc="走向下一点需要播放的音乐Nextroadvoice"/>
			<column type="string" desc="走向下一点所拥有的状态Nextroadstate"/>
      		<column type="int" desc="走向下一点的方式(0: 跑  1:走)Movetype"/>
      		<column type="string" desc="事件包ID表（多个用,隔开Eventid"/>
		</record>
	</records>
</object>
